<Window x:Class="FamilyArraying.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:FamilyArraying.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title ="Family Array"
        Height="400"
        Width="700" >
    <Window.Resources>
        <ResourceDictionary Source="../ResourceFile/StyleResource.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False"
          CanUserAddRows="False" Margin="10">

            <!-- Cột 1: Button -->
            <DataGridTemplateColumn Header="Action">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="Click"
                        Command="{Binding DataContext.MyButtonCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <!-- Cột 2: ComboBox (Category) -->
            <DataGridComboBoxColumn Header="Category"
                            SelectedItemBinding="{Binding Category, Mode=TwoWay}"
                            ItemsSource="{Binding DataContext.CategoryOptions, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                            />

            <!-- Cột 3: ComboBox (Subcategory) -->
            <DataGridComboBoxColumn Header="SubCategory"
                            SelectedItemBinding="{Binding SubCategory, Mode=TwoWay}"
                            ItemsSource="{Binding DataContext.SubCategoryOptions, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                            />

            <!-- Cột 4: TextBox -->
            <DataGridTextColumn Header="Description"
                        Binding="{Binding Description, Mode=TwoWay}" />

        </DataGrid>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 8 0">
            <Button Content="Add" Style="{StaticResource btnFrom_ResourceFile}" Margin="0 30 0 0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                Command="{Binding OkCommand}" 
                />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Content="Delete" Style="{StaticResource btnFrom_ResourceFile}" Margin="0 8 0 0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                Command="{Binding CancelCommand}" 
                />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>


        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Content="Ok" Style="{StaticResource btnFrom_ResourceFile}" Margin="0 0 8 0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                            Command="{Binding OkCommand}" 
                            />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Content="Cancel" Style="{StaticResource btnFrom_ResourceFile}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                            Command="{Binding CancelCommand}" 
                            />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>
