<Window x:Class="FamilyArraying.View.SetCoordinatesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:FamilyArraying.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title ="Set Coordinates"
        Height="200"
        Width="400" >
    <Window.Resources>
        <ResourceDictionary Source="../ResourceFile/StyleResource.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <StackPanel Height="30" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource tbFrom_ResourceFile}" 
                               Text="Parameter 1:"/>
                    <ComboBox Grid.Column="1" Style="{StaticResource cbFrom_ResourceFile}"
                              ItemsSource="{Binding Parameters}"
                              SelectedItem="{Binding SelectedParameter1, UpdateSourceTrigger=PropertyChanged}"
                              />
                </Grid>
            </StackPanel>
            <StackPanel Height="30" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Style="{StaticResource tbFrom_ResourceFile}" 
                               Text="Parameter 2:"/>
                    <ComboBox Grid.Column="1" Style="{StaticResource cbFrom_ResourceFile}"
                              ItemsSource="{Binding Parameters}"
                              SelectedItem="{Binding SelectedParameter2, UpdateSourceTrigger=PropertyChanged}"
                              />
                </Grid>
            </StackPanel>
        </Grid>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Content="Ok" Style="{StaticResource btnFrom_ResourceFile}" Margin="0 0 8 0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                            Command="{Binding OkCmd}" 
                            CommandParameter="{Binding RelativeSource = {RelativeSource AncestorType=Window}}" 
                            />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Content="Cancel" Style="{StaticResource btnFrom_ResourceFile}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction
                            Command="{Binding CancelCmd}" 
                            CommandParameter="{Binding RelativeSource = {RelativeSource AncestorType=Window}}" 
                            />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</Window>
